{
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "airbnb-base"
    ],
    "plugins": [
        "editorconfig"
    ],
    "rules": {
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "quotes": [
            "error",
            "double"
        ],
        "indent": "off",
        "semi": "off",
        "import/extensions": "off",
        "max-len": ["error", {
            "code": 120,
            "ignoreComments": true,
            "ignoreStrings": true,
            "ignorePattern": "^import .*"
        }],
        "comma-dangle": [
            "error",
            "always-multiline"
        ]
    },
    "overrides": [
        {
          "files": ["*.ts", "*.tsx"],
          "rules": {
            "no-undef": "off"
          }
        }
      ]
}
